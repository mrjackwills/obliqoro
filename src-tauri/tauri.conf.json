{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:9000",
		"distDir": "../dist",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "Obliqoro",
		"version": "0.2.0"
	},
	"tauri": {
		"allowlist": {
			"shell": {
				"open": true
			},
			"clipboard": {
				"all": false
			},
			"globalShortcut": {
				"all": false
			}
		},
		"bundle": {
			"active": true,
			"category": "Productivity",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "mrjackwills.obliqoro",
			"longDescription": "Obliqoro is an open source, cross platform, graphical application, that combines the creative approach of Oblique Strategies with the time management system of the Pomodoro Technique.",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "Oblique Strategies meets Pomodoro",
			"targets": [
				"deb",
				"msi",
				"app",
				"appimage",
				"dmg",
				"updater"
			],
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": "",
				"webviewInstallMode": {
					"type": "embedBootstrapper"
				}
			}
		},
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"alwaysOnTop": true,
				"center": true,
				"decorations": false,
				"fullscreen": false,
				"height": 850,
				"resizable": false,
				"title": "Obliqoro",
				"visible": false,
				"width": 1000,
				"skipTaskbar": true
			}
		]
	}
}